{% if 'greenpeace.org/nl' in current_url %}
	{% set url_prefix = '/nl'  %}
{% endif %}
<footer class="site-footer" id="footer">
	<div class="container">
		<ul class="footer-social-media list-unstyled col-md-8 col-lg-5">
			{% if social_overrides is defined and social_overrides|length %}
				{% for social in social_overrides %}
					<li>
						<a href="{{ social.url }}"
						   data-ga-category="Footer Navigation"
						   data-ga-action="Social Icons"
						   data-ga-label="{{ social.icon }}">
							{{ social.icon|svgicon }}
							<span class="visually-hidden">{{ social.icon }}</span>
						</a>
					</li>
				{% endfor %}
			{% else %}
			{% for social in footer_social_menu %}
				{% set name = "" %}
				{% for class_name in social.classes %}
					{% if 'fa-' in class_name %}
						{% set name = class_name[3:] %}
					{% else %}
						{% set name = class_name %}
					{% endif %}
				{% endfor %}
					<li>
						{% set social_url = social.url %}
						<a href="{{ social_url }}"
						   data-ga-category="Footer Navigation"
						   data-ga-action="Social Icons"
						   data-ga-label="{{ social.title }}">
						{{ name|svgicon }}
						<span class="visually-hidden">{{ social.title }}</span>
					</a></li>
			{% endfor %}
			{% endif %}
		</ul>

		<ul class="list-unstyled footer-links">
			{% for primary in footer_primary_menu %}
				<li>
					<a href="{{ primary.url }}"
					   data-ga-category="Footer Navigation"
					   data-ga-action="Primary Links"
					   data-ga-label="{{ primary.title }}">
						{{ primary.title }}
					</a>
				</li>
			{% endfor %}
		</ul>

		<ul class="list-unstyled footer-links-secondary">
			{% for secondary in footer_secondary_menu %}
				<li>
					<a href="{{ secondary.url }}"
					   data-ga-category="Footer Navigation"
					   data-ga-action="Secondary Links"
					   data-ga-label="{{ secondary.title }}">
						{{ secondary.title }}
					</a>
				</li>
			{% endfor %}
		</ul>
		<div class="row">
				<p class="footer-sponsors-logo col-md-4">
					<a href="https://www.greenpeace.org/nl/de-postcode-loterij-en-greenpeace/">
						<picture>
							<source srcset="https://www.greenpeace.org/static/planet4-netherlands-stateless/2018/06/logo-postcode-loterij.png" type="image/png">
							<img src="https://www.greenpeace.org/static/planet4-netherlands-stateless/2018/06/logo-postcode-loterij.png" alt="Greenpeace & Postcode Loterij">
						</picture>
					</a>
				</p>
				<p class="copyright-text col-md-4">
					{{ copyright_text_line1|e('wp_kses_post')|raw }}
				</p>
				<p class="footer-sponsors-logo col-md-4">
					<a href="https://www.cbf.nl/organisatie/greenpeace">
						<picture>
							<source srcset="https://www.greenpeace.org/static/planet4-netherlands-stateless/2018/06/CBF-ERKEND-DIAP-small.png" type="image/png">
							<img src="https://www.greenpeace.org/static/planet4-netherlands-stateless/2018/06/CBF-ERKEND-DIAP-small.png" alt="CBF Keurmerk">
						</picture>
					</a>
				</p>
		</div>
	</div>
</footer>

