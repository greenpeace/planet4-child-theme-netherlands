{% extends "base.twig" %}

{% block content %}

    <div class="clearfix"></div>
    <div class="skewed-overlay"></div>

    <header class="page-header">
        <div class="container">
            <h1 class="page-header-title">{{ taxonomy.name }}</h1>
            <div class="page-header-content">
                <p>{{ taxonomy.description|e('wp_kses_post')|raw }}</p>
            </div>
        </div>
    </header>

    <div class="page-template">
        <h3>{{ __( 'Results', 'planet4-master-theme' ) }}</h3>

        <nav aria-label="Page navigation example">
            <ul class="pagination">
            {% if posts.pagination.total > 1 %}
                {% for page in posts.pagination.pages %}
                    <li>
                        {% if page.link %}

                            {%  if loop.first and posts.pagination.current != 2%}
                                <li class="page-item"><a class="page-link" href="{{page.link}}" class="{{page.class}}">Begin</a></li>
                            {%  elseif loop.last and posts.pagination.current != posts.pagination.total - 1%}
                                <li class="page-item"><a class="page-link" href="{{page.link}}" class="{{page.class}}">Eind</a></li>
                            {% else %}
                                <li class="page-item"><a class="page-link" href="{{page.link}}" class="{{page.class}}">{{page.name}}</a></li>
                            {% endif %}

                        {% else %}

                            {% if page.current %}

                                {% if posts.pagination.prev%}
                                    <li class="page-item"><a class="page-link" href="{{posts.pagination.prev.link}}" class="prev {{posts.pagination.prev.link|length ? '' : 'invisible'}}">&laquo; Vorige</a></li>
                                {% endif %}

                                <li class="page-item active"><a class="page-link" href="{{page.link}}" class="{{page.class}}">{{page.name}}</a></li>

                                {% if posts.pagination.next%}
                                    <li class="page-item"><a class="page-link" href="{{posts.pagination.next.link}}" class="next {{posts.pagination.next.link|length ? '' : 'invisible'}}">Volgende &raquo;</a></li>
                                {% endif %}

                            {% else %}
                                <li class="page-item"><a class="page-link" class="{{page.class}}">{{page.title|raw}}</a></li>
                            {% endif %}

                        {% endif %}
                    </li>
                {% endfor %}
            {% endif %}
            </ul>
        </nav>


        <div class="row">
            <div class="col-lg-8 multiple-search-result">
                <ul class="list-unstyled">
                    {% for post in posts %}
                        {% include 'tease-taxonomy-post.twig' %}
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
{% endblock %}
